#include <iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int count =0;
    char color[n];
    for(int i=0; i<n; i++){
        cin>>color[i];
    }
    
    for(int i=0; i<n; i++){
        if (color [i]==color[i+1]){
            count++;
        }
    }
    
    cout<<count;
}
