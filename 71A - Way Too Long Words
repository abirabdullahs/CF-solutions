#include <iostream>
#include <cstring>
 
 
using namespace std;
int main(){
   
   int n;
   cin>>n;
   
   while(n--){
       string word;
       cin>>word;
    long long L = word.length();
    
    if (L<=10){
        cout <<word<<endl;
    }
    
    else {
        cout <<word[0]<<L-2<<word[L-1]<<endl;
    }
   }
}
